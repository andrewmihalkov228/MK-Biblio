@model LibrarySystem.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Оплата аренды";
}

<link rel="stylesheet" href="~/css/payment.css" />

<div class="payment-container">
    <h1>@ViewData["Title"]</h1>
    <p>Пожалуйста, введите данные карты для подтверждения аренды.</p>

    <form asp-controller="Books" asp-action="ConfirmPayment" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BookId" />

        <div class="form-group">
            <label asp-for="CardNumber"></label>
            <input asp-for="CardNumber" class="form-control" placeholder="1111 1111 1111 1111" />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ExpiryDate"></label>
            <input asp-for="ExpiryDate" class="form-control" placeholder="12/25" />
            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cvv"></label>
            <input asp-for="Cvv" class="form-control" placeholder="123" />
            <span asp-validation-for="Cvv" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Подтвердить аренду</button>
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}