@model LibrarySystem.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Авторизация в МК Библио";
    Layout = null;
}

<link rel="stylesheet" href="~/css/auth.css" />

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap">
</head>
<body>
    <div class="page-wrapper">
        <div class="login-container">
            <div class="logo-area">
                <div class="logo">МК Библио</div>
                <div class="tagline">Ваша цифровая библиотека</div>
            </div>

            <div class="form-container">
                <h1>Добро пожаловать</h1>
                <p class="subtitle">Войдите в свой аккаунт</p>

                @if (ViewData["SuccessMessage"] != null)
                {
                    <div class="success-message-container">
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle"></i> @ViewData["SuccessMessage"]
                        </div>
                    </div>
                }

                <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                    <div class="form-group">
                        <label for="Username">Имя пользователя</label>
                        <div class="input-wrapper">
                            <input type="text" asp-for="Username" placeholder="Введите имя пользователя" />
                            <span class="focus-border"></span>
                        </div>
                        <span asp-validation-for="Username" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="Password">Пароль</label>
                        <div class="input-wrapper">
                            <input type="password" asp-for="Password" placeholder="Введите пароль" />
                            <span class="focus-border"></span>
                        </div>
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <button type="submit" class="btn-login">Войти</button>
                </form>

                <div class="form-footer">
                    <p>Нет аккаунта? <a asp-controller="Account" asp-action="Register" class="register-link">Зарегистрируйтесь</a></p>
                </div>
            </div>

            <div class="decoration">
                <div class="book-stack"></div>
            </div>
        </div>
    </div>
</body>
</html>